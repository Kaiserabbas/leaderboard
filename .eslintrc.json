{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },

  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "rules": {
    "no-use-before-define": "off",
    "prefer-destructuring": ["error", {"object": true, "array": false}],
    "func-names": ["error", "never", { "generators": "always" }],
     "prefer-arrow-callback": "off",
    "arrow-parens": "off",
    "no-unused-vars": "off",
    "no-shadow": "off",
    "no-plusplus": "off", 
    "no-param-reassign": "off",
    "eol-last": "off",
     "radix": "off",
    "no-const-assign": "off",
    "arrow-body-style": "off",
     "comma-dangle": ["off", "always-multiline"],
    "import/extensions": [ 1, {
      "js": "always", "json": "always"
    }]
  },
  "ignorePatterns": [
    "dist/",
    "build/"
  ]
}